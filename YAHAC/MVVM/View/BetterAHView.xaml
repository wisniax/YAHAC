<UserControl 
	x:Class="YAHAC.MVVM.View.BetterAHView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:YAHAC.MVVM.View"
	xmlns:UserControls="clr-namespace:YAHAC.MVVM.UserControls"
	xmlns:MTB="clr-namespace:MinecraftTextBlock_for_dotNET_Core;assembly=MinecraftTextBlock_for_dotNET_Core"
	xmlns:ViewModel="clr-namespace:YAHAC.MVVM.ViewModel"
	Background="#202020"
	mc:Ignorable="d"
	BorderThickness="0"
	d:DesignHeight="450" d:DesignWidth="800"
	MouseMove="UserControl_MouseMove"
	>
	<UserControl.DataContext>
		<ViewModel:BetterAHViewModel/>
	</UserControl.DataContext>
	<UserControl.Resources>
		<Style TargetType="ScrollBar">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderBrush" Value="Black"/>
			<Setter Property="Opacity" Value="0.22"/>
			<Setter Property="Margin" Value="2,6,2,2"/>
		</Style>
	</UserControl.Resources>
	<Grid Background="Transparent">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<ListBox  x:Name="ItemsList"
				  Grid.Row="0"
				  HorizontalContentAlignment="Center"
				  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
				  ScrollViewer.VerticalScrollBarVisibility="Auto" 
				  BorderThickness="0"
				  Background="Transparent"
				  ItemsSource="{Binding Items}"
				  SelectionChanged="ItemsList_SelectionChanged">
			<ListBox.ItemContainerStyle>
				<Style TargetType="{x:Type ListBoxItem}">
					<!--<Setter Property="IsHitTestVisible" Value="False"/>-->
					<Style.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="IsSelected" Value="True"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</ListBox.ItemContainerStyle>
			<!--<ListBox.ItemContainerStyle>
			<Style TargetType="ListBoxItem">
				<Setter Property="Margin" Value="2"/>
			</Style>
		</ListBox.ItemContainerStyle>-->
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel HorizontalAlignment="Center"
						   />
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>
		<Canvas Panel.ZIndex="10"
				Visibility="{Binding AdditionalInfo_Visible,
			Converter={StaticResource BoolToVisibility}}">
			<Border 
				BorderBrush="#FF24015B"
				BorderThickness="5"
				CornerRadius="5"
				Padding="3"
				Margin="0"
				Background="#FF100110"
				RenderOptions.EdgeMode="Aliased"
				Canvas.Left="{
				Binding RelativeSource={
				RelativeSource FindAncestor, AncestorType={
				x:Type local:BetterAHView}}, 
				Path=DataContext.CanvasPoint.X}"
				Canvas.Top="{
				Binding RelativeSource={
				RelativeSource FindAncestor, AncestorType={
				x:Type local:BetterAHView}}, 
				Path=DataContext.CanvasPoint.Y}">
				<MTB:MinecraftTextBlock
					Text="{Binding RelativeSource={
					RelativeSource FindAncestor, AncestorType={
					x:Type local:BetterAHView}}, 
					Path=DataContext.SelectedItem,
					Converter={StaticResource ItemToItemName}}"
					FontSize="18"
					FontFamily="Lucida Console"
					Foreground="White"
				>
				</MTB:MinecraftTextBlock>
			</Border>
		</Canvas>
	</Grid>
</UserControl>
