<UserControl
	x:Class="YAHAC.MVVM.UserControls.BetterAH_RecipeConfig"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:YAHAC.MVVM.UserControls"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	mc:Ignorable="d"
	DataContext="{Binding Mode=OneWay, 
	RelativeSource={RelativeSource Self}}"
	d:DesignHeight="500"
	Visibility="{Binding visibile, 
	Converter={StaticResource BoolToVisibility}}">
	<Border
		BorderThickness="2"
		BorderBrush="Blue"
		Padding="3"
		Margin="5">
		<DockPanel
			Background="Transparent"
			DataContext="{Binding itemToSearchFor}">
			<TextBlock
				Text="Item Name"
				FontSize="20"
				DockPanel.Dock="Top"
				Background="Transparent"
				Foreground="LightCyan"
				Margin="5"
				HorizontalAlignment="Center"
				VerticalAlignment="Top" />
			<xctk:LongUpDown
				Background="Transparent"
				Foreground="Wheat"
				Value="{Binding maxPrice}"
				DockPanel.Dock="Top"
				Margin="5"
				FontSize="15"
				Increment="100000"
				DefaultValue="0"
				Watermark="Set maximum price"
				Maximum="5000000000"
				Minimum="0"
				ToolTip="Set maximum price"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Top" />
			<xctk:IntegerUpDown
				Background="Transparent"
				Foreground="Wheat"
				Value="{Binding priority}"
				FontSize="15"
				DockPanel.Dock="Top"
				Margin="5"
				Increment="1"
				DefaultValue="0"
				Watermark="Set priority"
				Maximum="1000"
				Minimum="0"
				ToolTip="Set priority"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Top" />
			<DockPanel
				DockPanel.Dock="Top"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Top"
				Margin="5">
				<TextBlock
					Text="Add query:"
					DockPanel.Dock="Left"
					FontSize="12"
					Foreground="LightCyan"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="0,0,5,0" />
				<TextBox
					DockPanel.Dock="Left"
					VerticalAlignment="Top"
					HorizontalAlignment="Right"
					FontSize="15"
					MaxLines="1"
					MaxLength="32"
					Width="150"
					Background="Transparent"
					Foreground="LightCyan"
					ToolTip="Add query to search in auction. Press ENTER to add." />
			</DockPanel>
			<ListView
				Background="Transparent"
				Foreground="LightCyan"
				DockPanel.Dock="Top"
				VerticalAlignment="Top"
				ItemsSource="{Binding searchQueries}"
				Margin="5"
				BorderThickness="0"
				ToolTip="Double-Click query to remove">
			</ListView>

		</DockPanel>
	</Border>
</UserControl>
