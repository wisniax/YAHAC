<UserControl x:Class="YAHAC.MVVM.UserControls.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YAHAC.MVVM.View"
			 xmlns:viewmodel="clr-namespace:YAHAC.MVVM.ViewModel"
			 Name="itemControl"
			 mc:Ignorable="d"
			 Background="Transparent"
			 BorderThickness="0"
			 Margin="1,3,1,3"
			 DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}"
			 >
	<Border Width="{Binding RelativeSource=
		{RelativeSource FindAncestor, 
		AncestorType={x:Type local:MainView}}, 
		Path=DataContext.settings.Default.MinecraftItemBox_Size}"
			Height="{Binding RelativeSource=
		{RelativeSource FindAncestor, 
		AncestorType={x:Type local:MainView}}, 
		Path=DataContext.settings.Default.MinecraftItemBox_Size}"
			Name="border"
			d:Width="68" d:Height="68"
			BorderBrush="DarkOrange"
			BorderThickness="1"
			CornerRadius="5"
			ClipToBounds="True"
			>
		<!--Love IT: https://stackoverflow.com/questions/6081800/wpf-rounded-corners-images-->
		<Border.Background>
			<ImageBrush Stretch="Fill" 
						ImageSource="{
				Binding item.Texture,
				Converter={StaticResource BitmapToWPFSource}}"/>
		</Border.Background>
	</Border>
</UserControl>
